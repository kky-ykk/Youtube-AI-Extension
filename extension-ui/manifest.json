{
  "manifest_version": 3,
  "name": "YouTube AI Assistant",
  "version": "1.0.0",
  "description": "Smart AI assistant for YouTube videos with real-time Q&A capabilities",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "YouTube AI Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup/*"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}